@model IEnumerable<Disertatie.Core.Models.Proiect>
@using Disertatie.Helpers
@functions {
    string StatusProiect(int status) {
        switch (status) {
            case 1: return "Propus";
            case 2: return "In lucru";
            case 3: return "Finalizat";
            case 4: return "Anulat";
            default: return "-";
        }
    }
}

<table id="services">
	
    <thead>
		<tr>
			<th>
				
			</th>
			<th>
				Creat la
			</th>
			<th>
				Titlu
			</th>
			
			<th>
			    Director
			</th>
            <th>
			    Status
			</th>
            
           
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model) {
	
         <tr>
				<td style="background-color: #E4E6CC;">
					@Html.ActionLink("Detalii", "DetaliiProiect", "Proiecte", new { id = item.Id }, null)
                </td>
              
				<td>
					@item.DataCreare.ToString("dd-MM-yyyy HH:mm")
				</td>
				<td>
					@item.Titlu
				</td>
				<td>
					@item.Initiator.Nume @item.Initiator.Prenume
				</td>                
				<td>
					@StatusProiect(item.Status)
				</td>  
			</tr>
      
  }
	</tbody>
    <tfoot>
        <tr>
            <td colspan="6">
                @Html.Partial("PaginationProiecteMembru", Model)
            </td>
        </tr>
    </tfoot>
</table>