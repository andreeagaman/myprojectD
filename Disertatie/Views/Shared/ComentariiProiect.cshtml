@using Disertatie.Helpers
@using Disertatie.Core.Models;
@model Disertatie.Models.MembruHomeModel
@*<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js" type="text/javascript"></script>*@
 @if (Model.ComentariiProiect.Count > 0)
 {       
             
 
                  for (int i = 0; i < Model.ComentariiProiect.Count; i++)
                  {
                      <div class="commentLine">
                      <a href="@Url.Action("DetaliiMembru", "Home", new { id = Model.ComentariiProiect[i].Utilizator.Id })" style=" color: #5777BB;">@Model.ComentariiProiect[i].Utilizator.Nume @Model.ComentariiProiect[i].Utilizator.Prenume:</a>
                      
                      @Html.DisplayTextFor(m => Model.ComentariiProiect[i].Descriere)
                      <br />
                        <span class="textLinks"   >
                        @Model.ComentariiProiect[i].DataCrearii
                        </span>
                        @if (Model.ComentariiProiect[i].Proiect.Initiator==Model.Utilizator || Model.ComentariiProiect[i].Utilizator==Model.Utilizator)
                        {
                            <div align="right">
                         <a href="#" class="removeComentariu" data-indexC="@Model.ComentariiProiect[i].Id">Sterge</a>
                         </div>
                        }
                             
                      </div>
                  }
              
 }
