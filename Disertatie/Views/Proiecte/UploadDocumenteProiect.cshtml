@{
    ViewBag.Title = "UploadDocumenteProiect";
    Layout = "~/Views/Shared/_LayoutAnonymousProfilePicture.cshtml";
}
@model Disertatie.Models.MembruHomeModel
           @using Disertatie.Helpers
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.numeric.js")" type="text/javascript"></script>

@if (TempData["Message"] != null)
{
    @Html.ErrorBox(TempData["Message"].ToString());

}
<a href="@Url.Action("Proiecte", "Proiecte")">Inapoi la proiecte</a>

<div id="fbx_title">
Incarca documente
</div>
<div class="fbx_div_block">
 @using (Html.BeginForm("UploadDocument", "Proiecte", new { id = Model.Proiect.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
 {
      @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Proiect.Id)
     <div style="line-height: 16px; margin: 10px">
                
                    <div id="doc_actionDiv">
                    <div class="buttons">
                        <input type="file" accept="pdf|doc|docx|ppt|pptx|txt|xls|xlsx/*" name="File" />
                        @*<img width="16" height="16" src="@Url.Content("~/Content/Images/doc_upload.png")" />*@
                        <input value="  Incarca" type="submit" />
                    

                    
                </div>
                </div>
            </div>
 }
</div>

@if (Model.DocumenteIncarcate.Count > 0)
{
    <div id="doc_bottom">
@Html.Partial("DocumenteIncarcate", Model.DocumenteIncarcate)
</div>
}